generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_Jade")
}

model AdmUser{
  id  Int @id @default(autoincrement())
  name String
  usuario String
  senha String
  email String @unique
  cref String
  especialidade String
  adm Boolean
}


model Aluno{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  email String @unique
  usuario String
  senha String
  adm Boolean

  treino Treino[]
  avaliacao  AvaliacaoFisica[]

}

  model Treino{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  objetivo String
  grupo Int
  exercico String
  exercicoMobilidade String
  reticao String

  usuario    Aluno    @relation(fields: [usuarioId], references:[id])
  usuarioId Int
  }

